echo "🚀 Running pre-push checks..."

echo "📝 Checking code formatting..."
if ! npm run format:check; then
    echo "❌ Code formatting check failed! Please run 'npm run format' to fix formatting issues."
    exit 1
fi

echo "🔧 Running TypeScript type check..."
if ! npm run typecheck; then
    echo "❌ TypeScript type check failed! Please fix the type errors before pushing."
    exit 1
fi

echo "🧹 Running ESLint..."
if ! npm run lint; then
    echo "❌ ESLint check failed! Please fix the linting errors before pushing."
    exit 1
fi

echo "✅ All pre-push checks passed!"
